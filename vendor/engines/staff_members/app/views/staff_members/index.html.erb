<%= javascript_include_tag "jquery" %>
<%= javascript_include_tag "shadowbox/shadowbox.js"%>
<!-- Yes, there's a stylesheet in the javascripts directory.
     No, I don't care. -->
<%= stylesheet_link_tag "/javascripts/shadowbox/shadowbox.css" %>
<style type="text/css">
#staff_members {
  margin: 0;
  padding: 0;
  width: 500px;
}
#staff_members li {
  float: left;
  list-style-type: none;
  padding-right: 6px;
}
#staff_members .staff_member_menu_link img {
  padding: 5px;
}
#staff_members .current img {
  background: #0061ae;
}
#bio_instructions {
  clear: both;
  margin: 20px 0;
}
.bio {
  display: none;
}
#staff_members_initial_content {
  display: block;
}
</style>
<script type="text/javascript">

Shadowbox.init({
  skipSetup: true
});

$(document).ready(function(){
  Shadowbox.setup("a.staff_member_menu_link", {
    width: 700
  });
});

</script>

<% content_for :body_content_left do %>
  <ul id="staff_members">
    <% @staff_members.each do |staff_member| %>
      <li>
        <%= link_to image_tag(staff_member.name.downcase.gsub(/\s/, '_') + ".jpg", :alt => staff_member.name), staff_member_path(staff_member), :class => "staff_member_menu_link", :id => "link_#{staff_member.id}" %>
      </li>
    <% end %>
  </ul>

  <div id="bio_instructions">
    Click on any staff member's photo to see their bio.
  </div>

  <div id="staff_members_initial_content" class="bio">
    <strong>Introducing Diana Vuolo, Executive Director</strong>
    <div>
<iframe src="http://player.vimeo.com/video/30885495?title=0&amp;byline=0&amp;portrait=0" width="551" height="310" frameborder="0" webkitAllowFullScreen allowFullScreen></iframe>
    </div>
  </div>
  <% @staff_members.each do |staff_member| %>
    <% content_tag :div, :id => "bio_#{staff_member.id}", :class => "bio" do %>
      <h2>
        <%= staff_member.name %>
      </h2>
      <h3>
        <%= staff_member.title %>
      </h3>
      <%= staff_member.bio.html_safe %>
    <% end %>
  <% end %>
<% end %>

<%= render :partial => "/shared/content_page" %>
