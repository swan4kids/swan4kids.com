<style type="text/css">
header, footer, nav#menu {
  display: none;
}
body, #page_container {
  background: #fff;
}
.inner img {
  float: right;
  margin-left: 20px;
  margin-bottom: 20px;
}
section:after {
  clear: none;
}
#page {
  float: none;
  margin-right: auto;
}
</style>

<% content_for :body_content_title do %>
  <%= @staff_member.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <%= image_tag(@staff_member.name.downcase.gsub(/\s/, '_') + ".jpg", :alt => @staff_member.name) %>
    <p>
      <%=raw @staff_member.title %>
    </p>
  </section>
  <section>
    <%=raw @staff_member.bio %>
  </section>
<% end %>

<%= render :partial => "/shared/content_page" %>
